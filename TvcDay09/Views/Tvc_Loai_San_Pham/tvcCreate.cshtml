@model TvcDay09.Models.Tvc_Loai_San_Pham

@{
    ViewData["Title"] = "tvcCreate";
}

<h1>Thêm mới sản phẩm</h1>

<h4>Các loại sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="tvcCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tvcMaLoai" class="control-label"></label>
                <input asp-for="tvcMaLoai" class="form-control" />
                <span asp-validation-for="tvcMaLoai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tvcTenLoai" class="control-label"></label>
                <input asp-for="tvcTenLoai" class="form-control" />
                <span asp-validation-for="tvcTenLoai" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="tvcTrangThai" /> @Html.DisplayNameFor(model => model.tvcTrangThai)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="tvcIndex" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
