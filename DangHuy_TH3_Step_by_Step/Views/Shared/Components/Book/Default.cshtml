@model IEnumerable<DangHuy_TH3_Step_by_Step.Models.Book>
<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
			<div class="thumbnail">
				<img src="@item.Image" alt="" />
				<div class="caption">
					<h3>@item.Title</h3>
					<p>
						Price : @item.Price
					</p>
				</div>
			</div>
		</div>
	}
</div>

<style>
	.thumbnail img {
		width: 100%;
		height: 400px;
		object-fit: cover;
		border-radius: 5px;
	}
</style>